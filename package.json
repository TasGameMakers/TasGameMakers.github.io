{
  "name": "tasgamemakers.github.io",
  "description": "Repo for tasgamemakers.com",
  "homepage": "https://tasgamemakers.com",
  "version": "1.0.0",
  "license": "FIXME",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TasGameMakers/TasGameMakers.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/genehack/TasGameMakers.github.io/issues"
  },
  "engines": {
    "node": "14.17",
    "npm": "6.14"
  },
  "scripts": {
    "build": "eleventy",
    "build-quiet": "npx eleventy --quiet",
    "clean": "rm -rfv _site/*",
    "clean-build": "npm run clean && npm run build",
    "debug": "DEBUG=* npx eleventy",
    "serve": "eleventy --serve",
    "watch": "eleventy --watch"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "!.eleventy.js"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "blockBindings": true
      }
    },
    "env": {
      "node": true,
      "es6": true
    }
  },
  "prettier": {
    "htmlWhitespaceSensitivity": "css",
    "tabWidth": 4,
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.html": "npx prettier --list-different",
    "*.js": [
      "npx eslint",
      "npx prettier --list-different"
    ],
    "*.json": "npx prettier --list-different",
    "*.md": "npx prettier --list-different",
    "*.scss": "npx prettier --list-different",
    "*.yaml": "npx prettier --list-different"
  },
  "devDependencies": {
    "eslint": "^7.30.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.12.1"
  }
}
